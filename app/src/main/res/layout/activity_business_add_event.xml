<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_business_add_place"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.afaf.newlayout.BusinessAddPlace">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:id="@+id/editText2"
                android:hint="Enter Event name " />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:layout_marginTop="27dp"
                android:id="@+id/editText3"
                android:hint="Description the Event"
                android:layout_below="@+id/editText2"
                android:layout_alignStart="@+id/editText2"
                android:layout_marginStart="10dp" />

            <TextView
                android:text="Event Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:id="@+id/textView"
                android:layout_below="@+id/editText3"
                android:layout_alignStart="@+id/editText3"
                android:paddingBottom="20dp"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:textColor="#A47A51" />
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:background="#15AFD8"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_height="3dp"
                android:paddingBottom="4dp"/>

            <TextView
                android:text="Event photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/textView"
                android:paddingBottom="2dp"
                android:layout_marginStart="10dp"
                android:paddingStart="3dp"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:textColor="#A47A51" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
                android:id="@+id/btn_choose_image"
                android:layout_marginStart="15dp" />
            <TextView
                android:text="Event date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:id="@+id/textView"
                android:layout_below="@+id/editText3"
                android:layout_alignStart="@+id/editText3"
                android:paddingBottom="10dp"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:textColor="#A47A51" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editDate"
                android:hint="D/M/Y" />

            <TextView
                android:text="Country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textColor="#A47A51"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:paddingLeft="10dp" />

            />
            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"

                />

            <TextView
                android:text="City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textColor="#A47A51"
                android:textSize="18sp"
                android:paddingLeft="10dp" />
            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"

                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dane_butto"
                android:id="@+id/imageButton2"
                android:background="#00ffffff"
                android:layout_marginStart="250dp"
                android:layout_marginTop="66dp" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
